<% for(let i = 0;i<posts.length;i++) { %>
    <% if(post_meta[i].includes("hp")) { %>
        <div class="col-md-8 d-flex">
            <div class="row">
                <div class="col-md-12">
                    <%- include('post.ejs',{ post:posts[i],post_meta : post_meta[i] }); %>
                </div>
                <div class="col-md-12">
                    <%- include('post.ejs',{ post:posts[++i],post_meta : post_meta[i] }); %>
                </div>
            </div>
        </div>
    <% }else { %>
        <div class="col-md-4 d-flex">
            <%- include('post.ejs',{ post:posts[i],post_meta : post_meta[i] }); %>
        </div>
    <% } %>
<% } %>
<%- include('Partials/header.ejs')%>

<div id="colorlib-main">
    <section class="ftco-section ftco-no-pt ftco-no-pb">
        <div class="container px-0">
            <div class="row d-flex no-gutters">
                <div class="col-lg-8 px-md-5 py-5">
                    <div class="row">
                        <h1 class="mb-3"><%= post.title %></h1>

                        <% for (var i = 0; i < post.body.length; i++) { %>
                            <%- post.body[i]%>
                            <%}%>

                            <div class="tag-widget post-tag-container mb-5 mt-5">
                                <div class="tagcloud">
                                    <% for (var i = 0; i < post.tags.length; i++) { %>
                                        <a href="#" class="tag-cloud-link"><%- post.tags[i]%></a>
                                        <%}%>
                                </div>

                                <div class="about-author d-flex p-4 bg-light">
                                    <div class="bio mr-5">
                                        <img src="<%= post.img %>" alt="Image placeholder" class="img-fluid mb-4">
                                    </div>
                                    <div class="desc">
                                        <h3><%= post.name %></h3>
                                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ducimus itaque, autem necessitatibus voluptate quod mollitia delectus aut, sunt placeat nam vero culpa sapiente consectetur similique, inventore eos fugit cupiditate numquam!</p>
                                    </div>
                                </div>


                                <div class="pt-5 mt-5">
                                    <h3 class="mb-5 font-weight-bold"><%= post.numberOfComments%> Comments</h3>
                                    <ul class="comment-list">
                                        <% function printComments(commentArray,isChild) {%>
                                        <% if (isChild) { %><ul class="children"><%}%>
                                        <% for (var i = 0; i < commentArray.length; i++) {%>
                                            <li class="comment">
                                                <div class="vcard bio">
                                                    <img src="<%= commentArray[i].userImg %>" alt="A user Image">
                                                </div>
                                                <div class="comment-body">
                                                    <h3><%= commentArray[i].user%></h3>
                                                    <div class="meta">
                                                        <%= commentArray[i].date%>
                                                    </div>
                                                    <p><%= commentArray[i].body %></p>
                                                    <p><a href="#">Reply</a></p>
                                                </div>
                                                <% if (commentArray[i].comments.length>0) {
                                                    printComments(commentArray[i].comments,true);
                                                }%>
                                            </li>
                                        <% } %>
                                        <% if (isChild) { %></ul><%}%>

                                        <%}%>
                                        <% printComments(post.comments,false)%>
                                    </ul>
                                    <div class="comment-form-wrap pt-5">
                                        <h3 class="mb-5">Leave a comment</h3>
                                        <form action="#" class="p-3 p-md-4 bg-light">
                                            <div class="form-group">
                                                <label for="name">Name *</label>
                                                <input type="text" class="form-control" id="name">
                                            </div>
                                            <div class="form-group">
                                                <label for="email">Email *</label>
                                                <input type="email" class="form-control" id="email">
                                            </div>
                                            <div class="form-group">
                                                <label for="website">Website</label>
                                                <input type="url" class="form-control" id="website">
                                            </div>

                                            <div class="form-group">
                                                <label for="message">Message</label>
                                                <textarea name="" id="message" cols="30" rows="10" class="form-control"></textarea>
                                            </div>
                                            <div class="form-group">
                                                <input type="submit" value="Post Comment" class="btn py-3 px-4 btn-primary">
                                            </div>

                                        </form>
                                    </div>
                                </div>
                            </div>
                    </div>
                    </div>
                    <%- include('Partials/sidebar-right')%>
                </div>
            </div>
        </section>
    </div>

        <%- include('Partials/footer.ejs')%>
